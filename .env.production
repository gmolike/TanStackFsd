# Production Environment Configuration
# This file is automatically loaded in production mode

# ================= API CONFIGURATION =================
VITE_API_URL="https://api.yourdomain.com"
VITE_ENABLE_PROXY="false"
VITE_API_TIMEOUT="30000"

# ================= PRODUCTION FEATURES =================
VITE_ENABLE_MOCK_API="false"
VITE_ENABLE_DEVTOOLS="false"
VITE_DEBUG_MODE="false"
VITE_ENABLE_WEB_VITALS="true"
VITE_WEB_VITALS_DEBUG="false"

# ================= BUILD SETTINGS =================
VITE_BUILD_SOURCEMAP="false"
VITE_BUILD_ANALYZE="false"
VITE_CHUNK_SIZE_WARNING_LIMIT="1000"

# ================= FEATURE FLAGS =================
VITE_FEATURE_NEW_DASHBOARD="true"
VITE_FEATURE_BETA_FEATURES="false"

# ================= EXTERNAL SERVICES =================
# Set these in your deployment environment
# VITE_GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
# VITE_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
# VITE_POSTHOG_KEY="phc_xxx"

# ================= SECURITY =================
VITE_CORS_ORIGIN="https://yourdomain.com"
VITE_CORS_CREDENTIALS="true"
VITE_CSP_ENABLE="true"
VITE_ENCRYPT_LOCAL_STORAGE="true"

# ================= PERFORMANCE =================
VITE_ENABLE_SW="true"
VITE_SW_CACHE_STRATEGY="cacheFirst"
VITE_PRELOAD_MODULES="true"
VITE_ENABLE_PROFILING="false"

# ================= CDN CONFIGURATION =================
# VITE_CDN_URL="https://cdn.yourdomain.com"
# VITE_ASSETS_CDN="https://assets.yourdomain.com"

# ================= MONITORING =================
VITE_ERROR_REPORTING="sentry"
VITE_ERROR_BOUNDARY_FALLBACK="production"

# ================= SESSION =================
VITE_SESSION_TIMEOUT="1800000"        # 30 minutes in production
VITE_REMEMBER_ME_DURATION="604800000" # 7 days

# ================= DEVTOOLS (DISABLED IN PRODUCTION) =================
VITE_ENABLE_REACT_DEVTOOLS="false"
VITE_ENABLE_QUERY_DEVTOOLS="false"
VITE_ENABLE_ROUTER_DEVTOOLS="false"
VITE_ENABLE_STORYBOOK="false"

# ================= LOGGING =================
VITE_LOG_LEVEL="warn"
VITE_ENABLE_SOURCE_MAPS="false"

# ================= DEPLOYMENT =================
VITE_DEPLOYMENT_PLATFORM="vercel"
VITE_DEPLOYMENT_BRANCH="main"

# ================= LEGACY SUPPORT =================
VITE_LEGACY_SUPPORT="false"
VITE_TARGET_BROWSERS=">0.2%, not dead, not op_mini all"

# ================= EXPERIMENTAL (PRODUCTION SAFE) =================
VITE_ENABLE_REACT_COMPILER="false"
VITE_ENABLE_CONCURRENT_FEATURES="true"
VITE_ENABLE_STREAMING_SSR="false"
